<% @page_title = "Companies" %>

<!--[if !IE]>start section<![endif]-->	
<div class="section table_section">
	<!--[if !IE]>start title wrapper<![endif]-->
	<div class="title_wrapper">
		<h2><%= @page_title -%></h2>

		<!--[if !IE]>start section menu<![endif]-->
		<ul class="section_menu">
			<li><a href="#" class="active"><span><span>All</span></span></a></li>
			<li><a href="#"><span><span>Client</span></span></a></li>
			<li><a href="#"><span><span>Prospect</span></span></a></li>
			<li><a href="#"><span><span>Vendor</span></span></a></li>
		</ul>
		<!--[if !IE]>end section menu<![endif]-->
		
		<span class="title_wrapper_left"></span>
		<span class="title_wrapper_right"></span>
	</div>
	<!--[if !IE]>end title wrapper<![endif]-->
	<!--[if !IE]>start section content<![endif]-->
	<div class="section_content">
		<!--[if !IE]>start section content top<![endif]-->
		<div class="sct">
			<div class="sct_left">
				<div class="sct_right">
					<div class="sct_left">
						<div class="sct_right">
							
						
							<div  id="product_list">
							<!--[if !IE]>start table_wrapper<![endif]-->
							<div class="table_wrapper">
								<div class="table_wrapper_inner">
								<table cellpadding="0" cellspacing="0" width="100%">
									<tbody><tr>
										<th><a href="#" class="asc">Name</a></th>
										<th><a href="#">Phone</a></th>
										<th>Web Page</th>
										<th>Notes</th>
										<th>Category</th>
										<th>Actions</th>
									</tr>									
									<%= render :partial => 'company', :collection => @companies %>
								</tbody></table>
								</div>
							</div>
							<!--[if !IE]>end table_wrapper<![endif]-->
							</div>
							
							<!--[if !IE]>start table menu<![endif]-->
							<div class="table_menu">
								<ul class="left">
									<li><%= link_to "<span><span>ADD NEW</span></span>", new_company_path, :class => "button add_new" %></li>
								</ul>
								<ul class="right">
									<li><a href="#" class="button check_all"><span><span>CHECK ALL</span></span></a></li>
									<li><a href="#" class="button uncheck_all"><span><span>UNCHECK ALL</span></span></a></li>
								</ul>
							</div>
							<!--[if !IE]>end table menu<![endif]-->
							
							<!--[if !IE]>start pagination<![endif]-->
							<%= will_paginate(@companies) %>
							<!--[if !IE]>end pagination<![endif]-->
							
						</div>
					</div>
				</div>
			</div>
		</div>
		<!--[if !IE]>end section content top<![endif]-->
		<!--[if !IE]>start section content bottom<![endif]-->
		<span class="scb"><span class="scb_left"></span><span class="scb_right"></span></span>
		<!--[if !IE]>end section content bottom<![endif]-->
		
	</div>
	<!--[if !IE]>end section content<![endif]-->
</div>
<!--[if !IE]>end section<![endif]-->

